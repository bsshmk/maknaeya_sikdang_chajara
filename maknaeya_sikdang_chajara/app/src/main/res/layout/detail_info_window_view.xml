<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/food_map_activity_dragView_RelativeLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"

>
    <LinearLayout
            android:id="@+id/food_map_activity_dragLayoutTopLayout_LinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <TextView
                android:gravity="center"
                android:textSize="24sp"
                android:textStyle="bold"
                android:text="맛집"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/food_map_activity_dragLayoutRestaurantName_TextView"/>
        <TextView
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:textSize="15dp"
                android:text="4.0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/food_map_activity_dragLayoutRestaurantRate_TextView"/>


    </LinearLayout>
    <LinearLayout
            android:id="@+id/food_map_activity_dragLayoutMidLayout_LinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/food_map_activity_dragLayoutTopLayout_LinearLayout">
        <ImageView
                android:id="@+id/food_map_activity_dragLayoutFoodImage_ImageView"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:src="@drawable/ic_launcher_foreground"
                android:layout_weight="1"/>
        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_alignParentRight="true"
                android:layout_weight="1"
        >
            <TextView
                    android:layout_margin="5dp"
                    android:text="text"
                    android:id="@+id/food_map_activity_dragLayoutDetailContents_TextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

        </ScrollView>

    </LinearLayout>

    <TextView
            android:id="@+id/food_map_activity_dragLayoutMainMenuPrices_TextView"
            android:layout_marginTop="10dp"
            android:text="음식 : 1000원"
            android:layout_below="@+id/food_map_activity_dragLayoutMidLayout_LinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="10dp"
            android:id="@+id/food_map_activity_dragLayoutReviewView_RecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/food_map_activity_dragLayoutMainMenuPrices_TextView"


    />

</RelativeLayout>